/* pages/all/all.wxss */
image{
  height: 200rpx;
  width: 100%;
  padding: 8rpx 0
}
.all{
  position: absolute;
  z-index: 999;
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box
}

/* pages/_xingxing/xingxing_.wxss */

.ripple {
    background-color: rgba(0, 0, 0, 0.8);
    border-radius: 100%;
    height:10px;
    width:10px;
    margin-top: -90px;
    position: absolute;
    -webkit-transform: scale(0);
}
@-webkit-keyframes ripple {
    100% {
    -webkit-transform: scale(12);
    transform: scale(12);
    background-color: transparent;
    }
}